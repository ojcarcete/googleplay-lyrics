{
  "name": "Lyria for Google Play (TM) Music",
  "version": "1.3.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "libs/js/jquery.min.js", 
      "libs/js/html-sanitizer-minified.js",
      "background.js"
    ]
  },
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "content_scripts": [{
      "matches": ["*://play.google.com/music/listen*"],
      "css": ["libs/css/darktooltip.css", "contentscript-theme.css"],
      "js": ["libs/js/jquery.min.js", "libs/js/html-sanitizer-minified.js", "libs/js/jquery.darktooltip.js", "contentscript.js"]
  }],
  "description": "Displays lyrics for the current song in Google Play (TM) Music",
  "permissions": [
    "storage",
    "*://play.google.com/music/listen*", 
    "*://lyrics.wikia.com/*",
    "*://lyrics.fandom.com/*"
  ]
}
